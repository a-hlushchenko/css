<div class="hero">
	{{#with hero}}
	<div class="hero-content">{{>hero}}</div>
	<div class="slider">
		<div class="slider-item slider-left"><--</div>
		<div class="slider-item slider-right">--></div>
	<img src="{{photo}}" alt="photo" class="hero-img">
	</div>
	{{/with}}
</div>


<main class="blog">
	{{#each blog}}
	{{>template-card}}
	{{/each}}
</main>

<div class="form">
	{{#with form}}
	<div class="form-content">
		<h3 class="form-title">{{title}}</h3>
		<p class="form-text">{{info}}</p>
	</div>
	<a href="{{href}}" class="button form-button">{{button}}</a>
	{{/with}}
</div>

<div class="position-container">
	<div class="position-test"></div>
	<div class="position"></div>
</div>