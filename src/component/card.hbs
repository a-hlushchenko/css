<div class="card">

	<div class="card-header">{{name}}</div>

	<div class="card-body">

		<div>
			<span class="card-price">${{price}}</span>
			<span class="card-price-duration"> / mo</span>
		</div>

		<ul class="card-texts">
			{{#each features}}
			<li class="plans-text">{{this}}</li>
			{{/each}}
		</ul>

		<div>
			<button
				class="btn card-button {{#unless @first}}btn-primary{{else}}btn-outline-primary{{/unless}}">{{button}}</button>
		</div>

	</div>

</div>